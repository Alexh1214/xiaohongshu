/* pages/profile/profile.wxss */

.profileBanner {
  padding: 100rpx;
  display: flex;
  align-items: center;
  justify-content: left;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.masonry {
  column-count: 2;
  column-gap: 1em;
  margin: 0.2em auto;
  max-width: 100%;
  max-height: 100%;
}

.card {
  background-color: aliceblue;
  display: inline-block;
  margin: 0 0 1em;
  width: 100%;
  padding: 0;
}

.card-header {
  margin-top: 0px;
	margin-bottom: 0px;
	padding-left: 10px;
	padding-right: 10px;
	padding-bottom: 5px;
	padding-top: 5px;
  font-size: 12px;
  font-weight: bold;
  background-color: white
}

.card-sub {
    display: flex;
    justify-content: space-between;
    padding: 10px;
    padding-top: 0px;
    padding-bottom: 0px;
    align-items: flex-end;
    margin-top: 0px;
    margin-bottom: 0px;
    align-items: center;
    font-size: 10px;
    background-color: white;
}

.card-sub-left {
	display: flex;
	justify-content: space-evently;
  align-items: center;
  font-size: 10px;
}

.avatar {
  width: 30px;
  height: 30px;
  border-radius:50%;
  margin-right: 8px;
}

.post .name {
  font-size: 10px;
}